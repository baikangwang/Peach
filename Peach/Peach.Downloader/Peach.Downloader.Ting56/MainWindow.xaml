<Window x:Class="Peach.Downloader.Ting56.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ting56 Downloader" Height="480" Width="640">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <TreeView Name="tvSeeds" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
        </TreeView>
        <StatusBar Name="StatusBar" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Grid.Row="2">
        </StatusBar>
        <Button Name="btTransaction" Content="Start" VerticalContentAlignment="Center"  HorizontalAlignment="Right"  Grid.Row="1" Width="75" Height="30" Click="Transaction_Click"/>
    </Grid>
</Window>
